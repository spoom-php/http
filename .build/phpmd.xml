<?xml version="1.0"?>

<ruleset name="webengine-php-code" xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd">
  <description>Webengine PHP ruleset</description>

  <!-- rule ref="phpmd/rulesets/codesize.xml/CyclomaticComplexity"/ -->
  <!-- rule ref="phpmd/rulesets/codesize.xml/NPathComplexity"/ -->
  <!-- rule ref="rulesets/codesize.xml/ExcessiveClassComplexity"/ -->
  <!--
 
 ezekkel egyelore baj van
   <rule ref="phpmd/rulesets/codesize.xml/ExcessiveClassLength"/>
   <rule ref="phpmd/rulesets/codesize.xml/ExcessiveMethodLength"/>
 
 -->

  <rule ref="phpmd/rulesets/codesize.xml/TooManyFields"/>
  <rule ref="phpmd/rulesets/codesize.xml/ExcessiveParameterList"/>

  <rule ref="phpmd/rulesets/codesize.xml/ExcessivePublicCount"/>
  <rule ref="phpmd/rulesets/codesize.xml/ExcessiveParameterList"/>
  <rule ref="phpmd/rulesets/codesize.xml/TooManyFields"/>

  <rule ref="phpmd/rulesets/design.xml/EvalExpression"/>
  <rule ref="phpmd/rulesets/design.xml/GotoStatement"/>
  <rule ref="phpmd/rulesets/design.xml/ExitExpression"/>

  <rule ref="phpmd/rulesets/naming.xml/ConstructorWithNameAsEnclosingClass"/>
  <rule ref="phpmd/rulesets/naming.xml/ShortMethodName"/>
  <rule ref="phpmd/rulesets/naming.xml/ShortVariable"/>
  <rule ref="phpmd/rulesets/naming.xml/LongVariable"/>
  <rule ref="phpmd/rulesets/naming.xml/ConstantNamingConventions"/>
  <rule ref="phpmd/rulesets/naming.xml/BooleanGetMethodName"/>

  <rule ref="phpmd/rulesets/unusedcode.xml/UnusedFormalParameter"/>
  <rule ref="phpmd/rulesets/unusedcode.xml/UnusedLocalVariable"/>
  <rule ref="phpmd/rulesets/unusedcode.xml/UnusedPrivateField"/>
  <rule ref="phpmd/rulesets/unusedcode.xml/UnusedPrivateMethod"/>
</ruleset>
